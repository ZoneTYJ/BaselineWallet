<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/vf_rectangle_title_white_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_bank_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_bank_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:layout_toRightOf="@+id/iv_bank_icon"
                android:text="中信银行"
                android:textColor="@color/color_black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_bank_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_bank_name"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/iv_bank_icon"
                android:text="储蓄卡"
                android:textColor="#999999"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/tv_bank_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_bank_des"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/tv_bank_des"
                android:text="尾号7777"
                android:textColor="#999999"
                android:textSize="17dp"/>

            <ImageView
                android:layout_alignTop="@+id/tv_bank_name"
                android:id="@+id/iv_qpay_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/vf_qp_icon"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/vf_rectangle_title_white_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="单笔限额"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/trade_limit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="1000.00"
            android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="-1dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/vf_rectangle_title_white_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="单日限额"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/daily_limit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="1000"
            android:textSize="16dp"/>
    </LinearLayout>
</LinearLayout>