<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="赵日天"
        android:textColor="@color/color_black"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/tv_card_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="6228484848484848"
        android:textColor="@color/text_normal_color"
        android:textSize="17dp"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"/>

        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13800013800"
            android:textColor="@color/text_gray_color"
            android:textSize="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:background="@drawable/vf_row_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:text="金额"
            android:textColor="@color/text_normal_color"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/et_money"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dip"
            android:background="@null"
            android:inputType="numberDecimal"
            android:textColor="@color/text_normal_color"
            android:textColorHint="@color/text_hint_color"
            android:textSize="14dp"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vf_row_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:text="备注"
            android:textColor="@color/text_normal_color"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/et_remark"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dip"
            android:background="@null"
            android:hint="20个字以内"
            android:inputType="text"
            android:maxLength="20"
            android:textColor="@color/text_normal_color"
            android:textColorHint="@color/text_hint_color"
            android:textSize="14dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_comfirm"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/vf_btn_normal_bg_selector"
        android:enabled="false"
        android:text="确认转账"
        android:textColor="@drawable/vf_btn_normal_text_selector"
        android:textSize="18sp"/>

</LinearLayout>
