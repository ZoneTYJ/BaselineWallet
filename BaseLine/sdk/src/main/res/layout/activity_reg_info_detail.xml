<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_bg"
    tools:context="cn.vfinance.demo.com.vfinworks.vfsdk.activity.login.RegInfoDetailActivity">

    <RelativeLayout
        android:id="@+id/layout_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/title_bg"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/layout_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:layout_marginLeft="2dip"
            android:orientation="horizontal" >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:duplicateParentState="true"
                android:background="@drawable/vf_back_selector" />
            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/back_text"
                android:textColor="@color/title_left_text_color"
                android:onClick="back"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="填写用户信息"
            android:textColor="@color/title_text_color"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vf_row_bg"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >"
        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_normal_color"
            android:textSize="16sp"
            android:text="昵称" />
        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dip"
            android:maxLength="20"
            android:textColorHint="@color/text_hint_color"
            android:textColor="@color/text_normal_color"
            android:hint="例如“围巾”"
            android:background="@null"
            android:inputType="text"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vf_row_bg"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >"
        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_normal_color"
            android:textSize="16sp"
            android:text="登录密码" />
        <EditText
            android:id="@+id/et_password"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dip"
            android:maxLength="20"
            android:textColorHint="@color/text_hint_color"
            android:textColor="@color/text_normal_color"
            android:hint="需组合字母、数字或符号"
            android:background="@null"
            android:inputType="text"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_recharge"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/vf_btn_normal_bg_selector"

        android:text="注册"

        android:onClick="regDetailInfo_Click"


        android:textColor="@drawable/vf_btn_normal_text_selector"
        android:textSize="18sp" />

</LinearLayout>
