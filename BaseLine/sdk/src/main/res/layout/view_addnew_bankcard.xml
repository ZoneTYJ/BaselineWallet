<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_province"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vf_rectangle_title_white_bg"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_province_label"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="12dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="12dip"
            android:text="省份"
            android:textColor="@color/text_normal_color"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_province"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/tv_province_label"
            android:hint="请选择省份"
            android:textColor="@color/text_normal_color"
            android:textColorHint="@color/text_hint_color"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/vf_right_arrow"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_city"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vf_rectangle_title_white_bg"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_city_label"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="12dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="12dip"
            android:text="城市"
            android:textColor="@color/text_normal_color"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/tv_city_label"
            android:hint="请选择城市"
            android:textColor="@color/text_normal_color"
            android:textColorHint="@color/text_hint_color"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/vf_right_arrow"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_bank"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vf_rectangle_title_white_bg"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_bank_label"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="12dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="12dip"
            android:text="银行"
            android:textColor="@color/text_normal_color"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_bank"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/tv_bank_label"
            android:hint="请选择银行"
            android:textColor="@color/text_normal_color"
            android:textColorHint="@color/text_hint_color"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/vf_right_arrow"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_subbranch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vf_rectangle_title_white_bg"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_subbranch_label"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="12dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="12dip"
            android:text="支行"
            android:textColor="@color/text_normal_color"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_subbranch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/tv_subbranch_label"
            android:hint="请选择支行"
            android:textColor="@color/text_normal_color"
            android:textColorHint="@color/text_hint_color"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/vf_right_arrow"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_card"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vf_rectangle_title_white_bg"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_card_label"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="12dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="12dip"
            android:text="卡号"
            android:textColor="@color/text_normal_color"
            android:textSize="18sp"/>


        <com.vfinworks.vfsdk.view.VFCardNumberEditText
            android:layout_marginBottom="12dip"
            android:layout_marginTop="12dip"
            android:id="@+id/et_card"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/tv_card_label"
            android:background="@null"
            android:hint="银行卡号"
            android:inputType="number"
            android:maxLength="23"
            android:textColor="@color/text_normal_color"
            android:textColorHint="@color/text_hint_color"
            android:textSize="18sp"/>
    </RelativeLayout>

</LinearLayout>