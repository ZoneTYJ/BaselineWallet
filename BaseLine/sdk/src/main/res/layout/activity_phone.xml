<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@android:color/white"
        android:layout_marginTop="20dp"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_base"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="手机号"
            android:textColor="@color/text_3"
            android:textSize="16dp"
            android:layout_marginLeft="18dp"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:textColor="@color/text_9"
            android:textSize="16dp"
            android:gravity="center_vertical"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_base"/>

    <Button
        android:id="@+id/btn_change_phone"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/vf_btn_normal_bg_selector"
        android:text="更换手机号"
        android:textColor="@drawable/vf_btn_normal_text_selector"
        android:textSize="18dp" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="一个手机号只能作为一个账号的登录名"
        android:textColor="@color/text_9"
        android:layout_marginLeft="15dp"/>
</LinearLayout>