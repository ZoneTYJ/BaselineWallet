<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dip"
	    android:layout_marginLeft="10dip"
	    android:layout_marginRight="10dip"
	    android:background="@drawable/vf_rectangle_title_white_bg"
	    android:orientation="vertical" >
	    <RelativeLayout 
	        android:id="@+id/layout_bank_info"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content">
			<ImageView
				android:layout_marginLeft="10dp"
				android:layout_centerVertical="true"
				android:id="@+id/iv_bank_icon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
	        <TextView
				android:layout_toRightOf="@+id/iv_bank_icon"
		        android:id="@+id/tv_bank_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dip"
		        android:layout_marginTop="10dip"
		        android:textColor="@color/color_black"
		        android:textSize="18sp"
		        android:text="中信银行" />
	        <TextView
				android:layout_toRightOf="@+id/iv_bank_icon"
		        android:id="@+id/tv_bank_des"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/tv_bank_name"
		        android:layout_marginLeft="10dip"
		        android:layout_marginBottom="10dip"
		        android:textColor="#999999"
		        android:textSize="16sp"
		        android:text="储蓄卡 | 提现卡" />
	        <TextView
				android:visibility="gone"
		        android:id="@+id/tv_bank_unbind"
		        android:layout_width="50dip"
		        android:layout_height="50dip"
		        android:layout_alignParentRight="true"
		        android:gravity="center"
		        android:clickable="true"
		        android:textColor="@color/color_black"
		        android:textSize="50sp"
		        android:text="-" />
			<ImageView
				android:id="@+id/iv_qpay_flag"
				android:layout_marginRight="10dp"
				android:layout_centerVertical="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:background="@drawable/vf_qp_icon"/>
	    </RelativeLayout>
	    
	    <TextView
	        android:id="@+id/tv_bank_num"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_marginLeft="10dip"
			android:layout_marginBottom="10dip"
	        android:textColor="@color/color_black"
	        android:textSize="20sp"
	        android:text="12334455666777777" />
	</LinearLayout>
</LinearLayout>