<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="270dp"
                android:layout_height="150dp"
                android:background="@drawable/vf_confirm_bg">
    <TextView
            android:id="@+id/tv_cd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#333333"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="确认手机号"/>

    <TextView
        android:id="@+id/tv_cd_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cd_title"
        android:textSize="12dp"
        android:textColor="#333333"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="我们将发验证码短信到这个手机号码:\n15721476821"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#666666"
                android:textSize="16dp"
                android:background="@drawable/vf_dialog_sure_selector"
                android:text="取消"/>
        <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#cccccc"/>
        <TextView
                android:id="@+id/tv_true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#666666"
                android:textSize="16dp"
                android:background="@drawable/vf_dialog_cancel_selector"
                android:text="好"/>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:background="#cccccc"/>
</RelativeLayout>