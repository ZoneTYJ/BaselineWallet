<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_cs_label"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:text="请输入收到的短信验证码"
        android:textSize="14dp"
        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        android:textColor="@color/text_9"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/layout_titlebar"
        android:background="@color/line_base"/>
    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/layout_titlebar"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="验证码"
            android:layout_marginLeft="18dp"
            android:textSize="16dp"
            android:textColor="#333333"/>
        <EditText
            android:id="@+id/et_verifycode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:background="@null"
            android:layout_marginLeft="20dp"
            android:hint="6位短信验证码"
            android:inputType="number"
            android:paddingLeft="6dp"
            android:maxLength="6"
            android:text=""
            android:textColor="@color/text_normal_color"
            android:textColorHint="#cccccc"
            android:textSize="16dp" />
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#cccccc"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/btn_resend"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:onClick="Resend_Verify_Code"
            android:gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:text="重发验证码"
            android:textColor="#cccccc"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/layout_titlebar"
        android:background="@color/line_base"/>
    <Button
        android:id="@+id/tv_next"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/vf_btn_normal_bg_selector"
        android:text="下一步"
        android:enabled="false"
        android:textColor="@drawable/vf_btn_normal_text_selector"
        android:textSize="18sp" />
</LinearLayout>