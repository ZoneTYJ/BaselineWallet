<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
   	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="50dip"
	    android:background="@color/title_bg"
	    android:gravity="center_vertical" >
	
	    <LinearLayout 
	        android:id="@+id/layout_left"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:clickable="true"
	        android:layout_marginLeft="2dip"
	        android:orientation="horizontal" >
	        <ImageView
	            android:layout_width="35dp"
	        	android:layout_height="35dp"
	        	android:duplicateParentState="true"
	        	android:background="@drawable/vf_back_selector" />
	        <TextView
		        android:id="@+id/tv_back"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:text="@string/back_text"
		        android:textColor="@color/title_left_text_color"
		        android:textSize="16sp" />
	    </LinearLayout>
	     
	    <TextView
	        android:id="@+id/tv_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:text="下订单"
	        android:textColor="@color/title_text_color"
	        android:textSize="20sp" />
	</RelativeLayout>

	<ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none"
        android:scrollbars="none" >
	    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@drawable/vf_row_bg"
			    android:orientation="horizontal" >
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="10dip"
			        android:layout_gravity="center_vertical"
			        android:textColor="@color/text_normal_color"
			        android:textSize="16sp"
			        android:text="交易类型" />
			    <Spinner
				    android:layout_width="fill_parent"
				    android:layout_height="40dip"
				    android:layout_marginLeft="20dip"
				    android:layout_gravity="center_vertical"
				    android:id="@+id/spinner_trade_type"/>
		    </LinearLayout>
		    <LinearLayout
		        android:id="@+id/ly_ensure_amount"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@drawable/vf_row_bg"
			    android:visibility="gone"
			    android:orientation="horizontal" >
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="10dip"
			        android:layout_gravity="center_vertical"
			        android:textColor="@color/text_normal_color"
			        android:textSize="16sp"
			        android:text="ensure_amount" />
			    <EditText
		            android:id="@+id/et_ensure_amount"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_marginLeft="20dip"
		            android:textColorHint="@color/text_hint_color"
		            android:textColor="@color/text_normal_color"
		            android:hint="请输入"
		            android:text="1"
		            android:background="@null"
		            android:inputType="numberDecimal"
		            android:textSize="16sp" />
		    </LinearLayout>
		    <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@drawable/vf_row_bg"
			    android:orientation="horizontal" >
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="10dip"
			        android:layout_gravity="center_vertical"
			        android:textColor="@color/text_normal_color"
			        android:textSize="16sp"
			        android:text="subject" />
			    <EditText
		            android:id="@+id/et_subject"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_marginLeft="20dip"
		            android:textColorHint="@color/text_hint_color"
		            android:textColor="@color/text_normal_color"
		            android:hint="请输入"
		            android:text="牛奶"
		            android:background="@null"
		            android:inputType="text"
		            android:textSize="16sp" />
		    </LinearLayout>
		    <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@drawable/vf_row_bg"
			    android:orientation="horizontal" >
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="10dip"
			        android:layout_gravity="center_vertical"
			        android:textColor="@color/text_normal_color"
			        android:textSize="16sp"
			        android:text="price" />
			    <EditText
		            android:id="@+id/et_price"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_marginLeft="20dip"
		            android:textColorHint="@color/text_hint_color"
		            android:textColor="@color/text_normal_color"
		            android:hint="请输入"
		            android:text="0.01"
		            android:background="@null"
		            android:inputType="numberDecimal"
		            android:textSize="16sp" />
		    </LinearLayout>
		   	<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@drawable/vf_row_bg"
			    android:orientation="horizontal" >
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="10dip"
			        android:layout_gravity="center_vertical"
			        android:textColor="@color/text_normal_color"
			        android:textSize="16sp"
			        android:text="quantity" />
			    <EditText
		            android:id="@+id/et_quantity"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_marginLeft="20dip"
		            android:textColorHint="@color/text_hint_color"
		            android:textColor="@color/text_normal_color"
		            android:hint="请输入"
		            android:text="1"
		            android:background="@null"
		            android:inputType="numberDecimal"
		            android:textSize="16sp" />
		    </LinearLayout>
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@drawable/vf_row_bg"
			    android:orientation="horizontal" >
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="10dip"
			        android:layout_gravity="center_vertical"
			        android:textColor="@color/text_normal_color"
			        android:textSize="16sp"
			        android:text="seller_type" />
			    <Spinner
				    android:layout_width="fill_parent"
				    android:layout_height="40dip"
				    android:layout_marginLeft="20dip"
				    android:layout_gravity="center_vertical"
				    android:id="@+id/spinner_seller_type"/>
		    </LinearLayout>
		    <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@drawable/vf_row_bg"
			    android:orientation="horizontal" >
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="10dip"
			        android:layout_gravity="center_vertical"
			        android:textColor="@color/text_normal_color"
			        android:textSize="16sp"
			        android:text="seller" />
			    <EditText
		            android:id="@+id/et_seller"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_marginLeft="20dip"
		            android:textColorHint="@color/text_hint_color"
		            android:textColor="@color/text_normal_color"
		            android:hint="请输入"
		            android:text="15700000000"
		            android:background="@null"
		            android:inputType="text"
		            android:textSize="16sp" />
		    </LinearLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/vf_row_bg"
				android:orientation="horizontal" >
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dip"
					android:layout_gravity="center_vertical"
					android:textColor="@color/text_normal_color"
					android:textSize="16sp"
					android:text="buyer" />
				<EditText
					android:id="@+id/et_buyer"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_marginLeft="20dip"
					android:textColorHint="@color/text_hint_color"
					android:textColor="@color/text_normal_color"
					android:hint="请输入"
					android:text="15700000000"
					android:background="@null"
					android:inputType="text"
					android:textSize="16sp" />
			</LinearLayout>

		    <Button
		        android:id="@+id/btn_order"
		        android:layout_width="fill_parent"
		        android:layout_height="40dp"
		        android:layout_marginTop="20dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:background="@drawable/vf_btn_normal_bg_selector"
		        android:enabled="true"
		        android:text="下单"
		        android:textColor="@drawable/vf_btn_normal_text_selector"
		        android:textSize="18sp" />
		</LinearLayout>
    </ScrollView>
</LinearLayout>
