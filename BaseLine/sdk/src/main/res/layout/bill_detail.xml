<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/activity_bg"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:background="@drawable/vf_rectangle_title_white_bg"
        android:paddingLeft="17dp">

        <TextView
            android:id="@+id/tv_trade_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="提现"
            android:textColor="@color/text_color_black"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_trade_type"
            android:layout_marginTop="10dp"
            android:text="-2000"
            android:textColor="@color/color_black"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_trade_type"
            android:layout_marginRight="18dp"
            android:text="成功"
            android:textColor="#ff822f"
            android:textSize="14dp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_payee"
        android:layout_marginTop="-1dp"
        android:layout_marginBottom="10dip"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@drawable/vf_rectangle_title_white_bg"
        android:orientation="horizontal"
        android:paddingLeft="17dp">

        <TextView
            android:visibility="gone"
            android:id="@+id/tvs_payee"
            android:layout_marginRight="17dp"
            android:layout_gravity="center_vertical"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="收款方"
            android:textColor="@color/text_color_black"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/tv_payee"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="招商银行吕瑶会"
            android:textColor="@color/color_black"
            android:textSize="14dp"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/lv_shop_describe"
        android:paddingLeft="17dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/vf_row_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="商品信息"
            android:textColor="@color/text_normal_color"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/tv_shop_describe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:textColor="@color/text_normal_color"
            android:textSize="14dp"/>
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="17dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/vf_row_bg"
        android:layout_marginTop="-1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="创建时间"
            android:textColor="@color/text_normal_color"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/tv_creat_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:singleLine="true"
            android:textColor="@color/text_normal_color"
            android:textSize="14dp"/>
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="17dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/vf_row_bg"
        android:layout_marginTop="-1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="交易号"
            android:textColor="@color/text_normal_color"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/tv_tradeaccount_no"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:singleLine="true"
            android:textColor="@color/text_normal_color"
            android:textSize="14dp"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/lv_merchant_no"
        android:paddingLeft="17dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/vf_row_bg"
        android:layout_marginTop="-1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="商户单号"
            android:textColor="@color/text_normal_color"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/tv_merchant_no"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:singleLine="true"
            android:textColor="@color/text_normal_color"
            android:textSize="14dp"/>
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="17dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/vf_row_bg"
        android:layout_marginTop="-1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="备注"
            android:textColor="@color/text_normal_color"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:singleLine="true"
            android:textColor="@color/text_normal_color"
            android:textSize="14dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    </LinearLayout>
    <Button
        android:visibility="gone"
        android:id="@+id/btn_comfirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/vf_btn_normal_bg_selector"
        android:text="立即付款"
        android:textColor="@drawable/vf_btn_normal_text_selector"
        android:textSize="18sp"/>
</LinearLayout>
