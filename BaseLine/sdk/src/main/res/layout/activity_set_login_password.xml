<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/activity_bg"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_base"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="18dp"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="6到20位字母、数字和符号组合"
            android:inputType="textPassword"
            android:textSize="14dp"
            android:digits="@string/register_name_digits"
            android:textColorHint="@color/text_9"
            android:textColor="@color/text_3"/>
        <ImageView
            android:id="@+id/iv_see"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/vf_eye_close"
            android:scaleType="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="38dp"
        android:enabled="false"
        android:background="@drawable/vf_btn_normal_bg_selector"
        android:text="重 置"
        android:textColor="@drawable/vf_btn_normal_text_selector"
        android:textSize="18dp" />
</LinearLayout>