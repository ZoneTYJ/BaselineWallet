<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="填写证件号码完成身份验证"
        android:paddingLeft="18dp"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:textColor="@color/text_3"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_base"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingLeft="18dp">
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="姓名"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="@color/text_3"
            android:gravity="center_vertical"
            android:textSize="16dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="18dp"
        android:background="@color/line_base"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingLeft="18dp">
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="证件号码"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"/>
        <EditText
            android:id="@+id/et_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColor="@color/text_3"
            android:gravity="center_vertical"
            android:inputType="number"
            android:textColorHint="@color/text_9"
            android:hint="输入证件号"
            android:textSize="16dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_base"/>
    <Button
        android:id="@+id/btn_next"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="38dp"
        android:enabled="false"
        android:background="@drawable/vf_btn_normal_bg_selector"
        android:text="下 一 步"
        android:textColor="@drawable/vf_btn_normal_text_selector"
        android:textSize="18dp" />
</LinearLayout>